<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/bg_widget_distribuidor">

    <!-- Contenedor horizontal -->
    <LinearLayout
        android:id="@+id/contenedor_textos_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:spacing="4dp">

        <!-- Puntos Exp -->
        <LinearLayout
            android:id="@+id/contenedor_puntos"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtPuntos"
                android:text="120"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/titulo_puntos"
                android:text="Puntos Exp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Posición -->
        <LinearLayout
            android:id="@+id/contenedor_posicion"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtRanking"
                android:text="3°"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/titulo_posicion"
                android:text="Posición"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Trophy icon on the right -->
    <ImageView
        android:id="@+id/icono_rayo"
        android:src="@drawable/copa_corta_blanco"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>
</RelativeLayout>
